@model Candy

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удалить товар</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" disabled rows="3" class="form-control"></textarea>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" disabled class="form-control" />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
                    <a asp-controller="Candy" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Назад
                    </a>
                </div>
            </div>
            <div class="col-4">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>
    </div>
</form>