@model Candy

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <input asp-for="ImageUrl" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Редактировать товар</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                        <option disabled selected>--Выберите категорию--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="BrandId"></label>
                    <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-select">
                        <option disabled selected>--Выберите бренд--</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" style="width:150px">Обновить</button>
                    <a asp-controller="Candy" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Назад
                    </a>
                </div>
            </div>
            <div class="col-4">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}