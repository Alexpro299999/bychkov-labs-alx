@model Brand

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удалить бренд</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Country"></label>
            <input asp-for="Country" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
        <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Назад
        </a>
    </div>
</form>