@model IEnumerable<ApplicationUser>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список пользователей</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Email</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <form asp-action="LockUnlock" asp-route-id="@obj.Id" method="post">
                                @if (obj.LockoutEnd != null && obj.LockoutEnd > DateTime.Now)
                                {
                                    <button type="submit" class="btn btn-success mx-2" style="width:150px">
                                        <i class="bi bi-unlock-fill"></i> Разблокировать
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-danger mx-2" style="width:150px">
                                        <i class="bi bi-lock-fill"></i> Заблокировать
                                    </button>
                                }
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>