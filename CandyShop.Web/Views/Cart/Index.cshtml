@model CartViewModel

<div class="container p-3">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Корзина покупок
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            @if (Model.CartItems.Count() > 0)
            {
                <div class="row mb-3 pb-3">
                    <div class="col-md-2 offset-md-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Продолжить покупки</small></a>
                    </div>
                    <div class="col-md-10 offset-md-1">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row border-bottom pb-3">
                                <div class="col-md-2 text-center py-2">
                                    <img src="@item.Candy.ImageUrl" class="rounded" width="100%" />
                                </div>
                                <div class="col-md-5 pt-md-2">
                                    <h5 class="text-uppercase text-secondary"><strong>@item.Candy.Name</strong></h5>
                                    <p><small>@item.Candy.Description</small></p>
                                </div>
                                <div class="col-md-5 text-center pt-md-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="Plus" asp-route-id="@item.Candy.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <span class="p-2 border bg-light text-dark"> @item.Count</span> &nbsp;
                                        <a asp-action="Minus" asp-route-id="@item.Candy.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>
                                    <div class="pt-2">
                                        Цена: @item.Candy.Price.ToString("c") <br />
                                        <span class="text-muted">Итого: @((item.Candy.Price * item.Count).ToString("c"))</span>
                                    </div>
                                    <div class="pt-2">
                                        <a asp-action="Remove" asp-route-id="@item.Candy.Id" class="btn btn-danger bg-gradient py-2">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-12 col-md-5 offset-md-7">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info"> Итого (USD)</span>
                                        <strong class="text-info">@Model.GrandTotal.ToString("c")</strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 offset-md-5">
                                <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary border-0 bg-gradient w-100 py-2">Оформить заказ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="p-2 text-center">
                    <p>Ваша корзина пуста.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">В каталог</a>
                </div>
            }
        </div>
    </div>
</div>