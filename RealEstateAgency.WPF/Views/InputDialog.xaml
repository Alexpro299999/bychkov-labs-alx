<Window x:Class="RealEstateAgency.WPF.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Name="LblPrompt" Text="Введите значение:" Margin="0,0,0,5"/>
        <TextBox Name="TxtInput" Margin="0,0,0,10"/>
        <Button Content="OK" Click="BtnOk_Click" HorizontalAlignment="Center" Width="80"/>
    </StackPanel>
</Window>